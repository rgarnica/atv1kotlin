<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".LoginActivity"
            android:padding="@dimen/main_padding"
            android:orientation="vertical"
            android:gravity="center">

        <ImageView
                android:contentDescription="@string/app_name"
                android:src="@drawable/main_logo"
                android:layout_width="@dimen/logo_square_size"
                android:layout_height="@dimen/logo_square_size"/>

        <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_marginVertical="@dimen/login_title_margin_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title"/>

        <EditText
                android:inputType="textEmailAddress"
                android:hint="@string/login_input_username"
                android:layout_marginVertical="@dimen/login_input_margin_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:inputType="textPassword"
                android:hint="@string/login_input_password"
                android:layout_marginVertical="@dimen/login_input_margin_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_marginTop="@dimen/login_buttons_margin_top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="@dimen/login_buttons_width"
                    android:layout_height="@dimen/login_buttons_height"
                    android:text="@string/login_button_sigin"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="@dimen/login_buttons_width"
                    android:layout_height="@dimen/login_buttons_height"
                    android:text="@string/login_button_clear"
                    android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>